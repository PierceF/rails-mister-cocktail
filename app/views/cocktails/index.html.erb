<section>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <% if cocktail.photo.attached? %> <%= cl_image_path cocktail.photo.key %> <% else %> https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg <% end %>)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
     <% end %>
  </div>
</section>






